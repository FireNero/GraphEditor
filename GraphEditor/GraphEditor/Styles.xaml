<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<SolidColorBrush x:Key="PrimaryMousePressedColor" Color="CornflowerBlue" />
	<SolidColorBrush x:Key="PrimaryMouseOverColor" Color="LightGray" />
	
	<ControlTemplate TargetType="Button" x:Key="StandardButtonControlTemplate">
		<Grid>
			<Rectangle x:Name="BackgroundRectangle" StrokeThickness="0" Fill="{TemplateBinding Background}" 
					   Opacity="1" Visibility="Visible" />
			<ContentPresenter Content="{TemplateBinding Button.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />	
		</Grid>
		<ControlTemplate.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="{StaticResource PrimaryMouseOverColor}" />
			</Trigger>
			
			<Trigger Property="IsPressed" Value="True">
				<Setter Property="Background" Value="{StaticResource PrimaryMousePressedColor}" />
			</Trigger>
		</ControlTemplate.Triggers>
	</ControlTemplate>
	
	<Style TargetType="Button">
		<Setter Property="Template" Value="{StaticResource StandardButtonControlTemplate}" />
	</Style>
	
</ResourceDictionary>