<Window x:Class="GraphEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowStyle="None" WindowState="Maximized" Background="#464545">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MaxHeight="60"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" MaxWidth="100"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			
			<Grid Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*" MaxHeight="30"/>
				</Grid.RowDefinitions>
			</Grid>
		</Grid>
		
		<DockPanel Grid.Row="0">
			<UniformGrid DockPanel.Dock="Left" Columns="4" MaxWidth="200">
				<Button x:Name="NewFileButton" Content="New" />
				<Button x:Name="ExistingFileButton" Content="Existing" />
				<Button x:Name="SaveButton" Content="Save" />
				<Button x:Name="SaveAsButton" Content="SaveAs" />
			</UniformGrid>


			<UniformGrid DockPanel.Dock="Right" Columns="3" MaxWidth="200">
				<Button x:Name="InfoButton" Content="Info" />
				<Button x:Name="MinimizeButton" Content="Minimize" />
				<Button x:Name="ExitButton" Content="Exit" />
			</UniformGrid>

			<Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<TextBlock Text="Graph Editor" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Center"
					   FontSize="36" FontFamily="Edwardian Script ITC" Foreground="Red" FontWeight="Bold"/>
			</Viewbox>
		</DockPanel>
		
	</Grid>
</Window>
